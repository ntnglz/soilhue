/* General Section */
"help.general.what.title" = "¿Qué es SoilHue?";
"help.general.what.content" = "SoilHue es una aplicación diseñada para ayudar en la clasificación y análisis del color del suelo utilizando el sistema Munsell, un estándar internacional para la descripción del color.";

"help.general.how.title" = "¿Cómo funciona?";
"help.general.how.content" = "1. Toma una foto del suelo o selecciona una existente\n2. Selecciona el área específica a analizar\n3. Obtén el color Munsell y la clasificación del suelo";

"help.general.tips.title" = "Consejos para mejores resultados";
"help.general.tips.content" = "• Toma fotos con luz natural\n• Evita sombras y reflejos\n• Mantén la muestra limpia y seca\n• Usa una superficie plana";

"help.general.munsell.title" = "Sistema Munsell";
"help.general.munsell.content" = "El sistema Munsell describe el color usando tres componentes:\n• Matiz: el color base\n• Valor: la luminosidad\n• Croma: la saturación";

/* Soils Section */
"help.soils.types.title" = "Tipos Principales de Suelos";
"help.soils.types.content" = "• Entisoles: Suelos jóvenes con poco desarrollo de horizontes\n• Inceptisoles: Suelos poco desarrollados con horizontes incipientes\n• Molisoles: Suelos oscuros y fértiles ricos en materia orgánica\n• Alfisoles: Suelos con horizonte rico en arcilla, fértiles\n• Ultisoles: Suelos ácidos muy meteorizados\n• Oxisoles: Suelos tropicales muy meteorizados\n• Vertisoles: Suelos arcillosos que se agrietan\n• Aridisoles: Suelos de regiones áridas\n• Spodosoles: Suelos ácidos con acumulación de hierro\n• Histosoles: Suelos orgánicos (turba)";

"help.soils.color.title" = "Características del Color";
"help.soils.color.content" = "• Rojo: Indica presencia de óxidos de hierro, buena aireación\n• Amarillo: Presencia de óxidos de hierro hidratados\n• Gris: Condiciones de reducción, mal drenaje\n• Negro/Marrón Oscuro: Alto contenido de materia orgánica\n• Blanco: Presencia de carbonatos, sales o sílice";

"help.soils.factors.title" = "Factores Influyentes";
"help.soils.factors.content" = "• Materia orgánica\n• Minerales presentes\n• Contenido de humedad\n• Grado de oxidación\n• Actividad biológica";

/* Horizons Section */
"help.horizons.main.title" = "Horizontes Principales";
"help.horizons.main.content" = "• O - Horizonte orgánico: Restos vegetales en descomposición\n• A - Horizonte mineral superficial: Rico en materia orgánica\n• E - Horizonte de eluviación: Pérdida de materiales por lixiviación\n• B - Horizonte de iluviación: Acumulación de materiales\n• C - Material parental: Roca madre poco alterada\n• R - Roca madre: Material original inalterado";

"help.horizons.a.title" = "Horizonte A";
"help.horizons.a.content" = "• A1: Mayor contenido de materia orgánica\n• A2: Transición, menos materia orgánica\n• A3: Transición al horizonte B\n\nCaracterísticas:\n• Color oscuro por materia orgánica\n• Alta actividad biológica\n• Buena estructura del suelo";

"help.horizons.b.title" = "Horizonte B";
"help.horizons.b.content" = "• Bt: Acumulación de arcilla\n• Bs: Acumulación de sesquióxidos\n• Bh: Acumulación de humus\n• Bk: Acumulación de carbonatos\n\nCaracterísticas:\n• Mayor desarrollo estructural\n• Colores más intensos\n• Menor contenido orgánico";

"help.horizons.color.title" = "Importancia del Color";
"help.horizons.color.content" = "El color es un indicador importante de:\n• Contenido de materia orgánica\n• Condiciones de drenaje\n• Procesos de oxidación-reducción\n• Presencia de minerales específicos\n• Historia del desarrollo del suelo";

